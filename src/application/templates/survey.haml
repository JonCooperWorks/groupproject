-extends "base.html" 

-block content
  #survey: %section
    .progress.progress-striped.active
      .bar(style="width: 10%")
    -for question in questions
      -if question.type == onetofivetype
          %div
            %form(action=" {{ url_for('submitsurvey') }} ", method="POST")
              .row
                .formgroup.span10
                  %label.control-label(for="{{question.number}}")
                    {{question.question}}
                  %input(type="radio", name="{{question.number}}", value="1") 
                    
                  %input(type="radio", name="{{question.number}}", value="2") 
                    
                  %input(type="radio", name="{{question.number}}", value="3") 
                    
                  %input(type="radio", name="{{question.number}}", value="4") 
                    
                  %input(type="radio", name="{{question.number}}", value="5")  
                    


      -if question.type == openended
        .row
          .formgroup.span10
            %label.control-label(for="{{question.number}}")
              {{question.question}}
            %input.form-control(type="text", class="form-control", id="{{question.number}}")

      .row          
        .form-group.span10
          %button(type="submit", class="btn btn-default") Submit
